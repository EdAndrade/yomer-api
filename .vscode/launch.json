{
    "version": "0.2.0",
    "configurations": [
        {
            "type":  "node",
            "request": "attach",
            "name": "attach",
            "remoteRoot": "/app",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "sourceMaps": true,
            "port": 9876,
            "address": "0.0.0.0",
            "restart": true,
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
        }
    ]
}